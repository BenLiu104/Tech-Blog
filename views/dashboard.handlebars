  <h1 class="m-2">Dashboard</h1>
{{#if posts.length}}
{{#each posts as |post| }}
  <div class="post container">
      <div class="card">
          <div class="flex-row">
              <h3 class="col-9 bg-dark text-light card-header"><a href="/update/{{id}}">{{title}}</a></h3>
              <h6 class="col-3 bg-dark text-light">Create on {{date_created}}</h6>
          </div>
          <p class="card-body">{{content}}</p>
      </div>

  </div>  
{{/each}}
{{/if}}