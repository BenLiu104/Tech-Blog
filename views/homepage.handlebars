  <h1 class="m-2">Tech blog</h1>
{{#each posts as |post| }}
  <div class="post container">
      <div class="card">
          <div class="flex-row bg-dark justify-space-between align-center">
              <h3 class="bg-dark text-light card-header"><a href="/post/{{id}}">{{title}}</a></h3>
              <h6 class="text-light">Create by <b>{{user.name}}</b> on {{format_date date_created}}</h6>
          </div>
          <p class="card-body">{{content}}</p>
      </div>

  </div>  
{{/each}}
